{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "templates/chat.html", "use": "@vercel/static" },
    { "src": "static/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/app.py" },
    { "src": "/(.*)", "dest": "/templates/chat.html" }
  ]
}
